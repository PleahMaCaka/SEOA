{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "noImplicitAny": false,
        "strict": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "./test/**/*.ts"
    ]
}